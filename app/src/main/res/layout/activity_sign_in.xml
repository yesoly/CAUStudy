<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".SignInActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="278dp"
        android:layout_height="208dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="67dp"
        app:srcCompat="@drawable/cau" />

    <EditText
        android:id="@+id/email_in"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="user@cau.ac.kr"
        android:inputType="textEmailAddress"
        android:textColor="#363636"
        android:textColorHint="#525252" />

    <EditText
        android:id="@+id/pwd_in"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_in"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#363636"
        android:textColorHint="#525252" />


    <Button
        android:id="@+id/signIn"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@+id/pwd_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:background="@drawable/blue_button"
        android:text="로그인"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/findPW"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@+id/signIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="비밀번호 찾기"
        android:textColor="#707070" />

    <CheckBox
        android:id="@+id/autoLogin"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd_in"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="225dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="53dp"
        android:text="로그인 정보 저장" />


</RelativeLayout>